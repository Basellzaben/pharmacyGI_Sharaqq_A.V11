<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GalaxyMainActivity"
    android:background="#fff"
    android:id="@+id/R_Back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4.3"

        android:layoutDirection="ltr">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/Blue"
            android:layout_weight="0.50"
            android:minHeight="179dp"
            android:layout_height="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Frag1"
                android:layout_weight=".2">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/CheckData"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#000" />

                <TextView
                    android:text="اضافة شيكات"
                    android:layout_gravity="center|right"
                    android:layout_width="wrap_content"
                    android:textColor="@color/White"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView246"
                    android:paddingRight="20dp"
                    android:textSize="18sp" />

            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/Gray3"

            android:gravity="right"

            android:layout_weight="0.50"
            android:layout_height="0dp">

            <Methdes.MyTextView
                android:text="مبلغ الشيكات:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:textColor="@color/White"

                android:id="@+id/textView255"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/White"

                android:layout_alignTop="@+id/textView255"
                android:layout_toStartOf="@+id/textView255"
                android:id="@+id/tv_CheckAmt" />

            <Methdes.MyTextView
                android:text="عدد الشيكات :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_CheckAmt"
                android:layout_alignParentStart="true"
                android:textColor="@color/White"
                android:layout_marginStart="121dp"
                android:id="@+id/textView257"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView257"
                android:layout_alignParentStart="true"
                android:textColor="@color/White"

                android:layout_marginStart="59dp"
                android:id="@+id/tv_Check_count" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:weightSum="4">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:minHeight="178dp"
                    android:minWidth="1dp"
                    android:layout_weight="1.5"
                    android:gravity="right">

                    <EditText
                        android:id="@+id/CheckNo"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/btn_cir_white_fill_black"
                        android:gravity="center"
                        android:inputType="number"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Methdes.MyTextView
                        android:text="رقم الشيك"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView259"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:gravity="right"
                        android:layout_marginRight="45dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="right">

                    <EditText
                        android:id="@+id/ChekAmt"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_cir_white_fill_black"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:text="المبلغ"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:gravity="right"
                        android:layout_marginRight="45dp"
                        android:id="@+id/tv_Amount" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:weightSum="2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="right">

                    <EditText
                        android:id="@+id/ed_CheckData"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_cir_white_fill_black"
                        android:gravity="center"
                        android:hint="2017/01/01"
                        android:inputType="date"
                        android:maxLength="10"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:text=" تاريخه"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:gravity="right"
                        android:layout_marginRight="45dp"
                        android:id="@+id/tv_data_check" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"

                android:layout_height="54dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:weightSum="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <ImageView
                            android:id="@+id/imageView24"
                            android:src="@mipmap/d2"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_width="15dp"
                            android:layout_margin="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8">

                        <Spinner
                            android:layout_height="match_parent"
                            android:id="@+id/sp_banks"
                            android:textAlignment="center"
                            android:backgroundTint="#fff"
                            android:background="#fff"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="2dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <TextView
                        android:text="اسم البنك"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:gravity="right"
                        android:layout_marginRight="45dp"
                        android:id="@+id/tv_bank_name" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="2"
            android:background="@color/Gray3">

            <RelativeLayout
                android:id="@+id/btn_Back"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/Pink"
                android:onClick="btn_back (ItemGalleryActivity)">

                <TextView
                    android:id="@+id/textView266"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="الغاء"
                    android:textColor="@color/White"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Green"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:onClick="btn_save_po"

                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/btn_save_Check">

                <TextView
                    android:text="اضافة"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView267"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

