<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="9"
        android:minHeight="50dp"
        android:background="@color/Gray5">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/imageButton23"
                android:src="@mipmap/icon_pin"
                android:scaleType="fitXY"
                android:onClick="btn_Edite_Qty"
                android:nestedScrollingEnabled="true"
                android:padding="0dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageButton
                android:id="@+id/imageButton21"
                android:src="@mipmap/icon_delete"
                android:scaleType="fitXY"
                android:onClick="btn__Remove_Item"
                android:padding="0dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tv_diff"
            android:textColor="#000"
            android:text="tv_diff"
            android:gravity="center"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_ac_qty"
            android:textColor="#000"
            android:gravity="center"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_Qty"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_qtysaled"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_QtyAcc"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_UnitName"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_ItemNm"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="1.8"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20dp" />

        <Methdes.MyTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tv_Item_No"
            android:gravity="center"
            android:textColor="#000"
            android:layout_weight="0.9"
            android:background="#fff"
            android:layout_marginLeft="1dp"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>