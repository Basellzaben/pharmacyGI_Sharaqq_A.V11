<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- NOT SO IMPORTANT CUSTOM UI STUFF -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layoutDirection="locale">

            <Methdes.MyTextView
                android:id="@+id/textView209"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:text="رقم الزيارة"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView210"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:text="رقم الصيدلية"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView211"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="2"
                android:background="@color/Black11"
                android:gravity="center"
                android:text="اسم الصيدلية"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView212"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="التاريخ"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView213"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="وقت البداية"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView214"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="وقت النهاية"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Methdes.MyTextView
                android:id="@+id/textView215"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/Black11"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="الحالة"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ListView
                android:id="@+id/SalesSummery"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/Gray5"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ShareVisits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"

                    android:text="اعتماد الزيارات"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/DeleteVisits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/ColorPrimaryDark"
                    android:text="حذف الزيارات"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Methdes.MyTextView
                    android:id="@+id/tv_DeleteTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="وقت الحذف"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_Count"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_cir_white_fill_black"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Methdes.MyTextView
                    android:id="@+id/textView207"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="العدد"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>