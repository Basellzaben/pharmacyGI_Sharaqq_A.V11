<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout 
	    android:id="@+id/LinearLayout03" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
		<!-- Divide | EditText | Button | -->
	    <EditText 
	        android:id="@+id/EditTextAddressBT" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_weight="1" 
		    android:inputType="text"/>
		<Button 
		    android:text="اتصال"
		    android:id="@+id/ButtonConnectBT" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:layout_weight="2"/>

	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/LinearLayout01" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
		<Button 
		    android:text="البحث عن الطابعة"
		    android:id="@+id/ButtonSearchBT" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/LinearLayout02" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content">
		<ListView 
		    android:id="@+id/ListView01" 
		    android:layout_width="fill_parent" 
		    android:layout_height="50dp"/>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="ServerIP"
			android:id="@+id/textView83"
			android:textIsSelectable="false"
			android:textColor="#000"
			android:textSize="20dp" />

		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/et_IP" />

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="بداية تسلسل الفواتير"
			android:id="@+id/textView131"
			android:textColor="#000" />

		<EditText
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:id="@+id/et_Sal_inv"
			android:inputType="number"
			android:maxLength="7" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/textView155"
			android:layout_weight="1" />

		<TextView
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="بداية تسلسل طلبات البيع"
			android:id="@+id/textView156"
			android:textColor="#000" />

		<EditText
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/et_m4"
			android:maxLength="7" />
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="بداية تسلسل سندات القبض"
			android:id="@+id/textView137"
			android:textColor="#000" />

		<EditText
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:id="@+id/et_Payments"
			android:inputType="number"
			android:maxLength="7" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/textView157"
			android:layout_weight="1" />

		<TextView
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="بداية تسلسل العملاء النقديين"
			android:id="@+id/textView158"
			android:textColor="#000" />

		<EditText
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/et_m5"
			android:maxLength="7" />
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="بداية تسلسل طلب تجهيز مواد"
			android:id="@+id/textView148"
			android:textColor="#000" />

		<EditText
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:id="@+id/et_PrepQty"
			android:inputType="number"
			android:maxLength="7" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/textView159"
			android:layout_weight="1" />

		<TextView
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="بداية تسلسل  ارجاع المواد"
			android:id="@+id/textView160"
			android:textColor="#000" />

		<EditText
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/et_m6"
			android:maxLength="7" />
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Spinner
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:id="@+id/sp_Printer_Type" />

		<TextView
			android:layout_width="180dp"
			android:layout_height="70dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="نوع الطابعة"
			android:id="@+id/textView168"
			android:textColor="#000"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical" />

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/textView170"
			android:layout_weight="1" />

		<TextView
			android:layout_width="180dp"
			android:layout_height="70dp"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="نوع  الجهاز التابلت"
			android:id="@+id/textView169"
			android:textColor="#000"
			android:gravity="center_vertical" />

		<Spinner
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:id="@+id/sp_MobileType"
			android:layout_marginTop="-20dp" />

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="حفظ"
			android:id="@+id/button3"
			android:onClick="btn_Save_Setting" />
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="مسح كل البيانات"
			android:id="@+id/btn_Delete"
			android:onClick="DeleteAll" />
	</LinearLayout>

</LinearLayout>